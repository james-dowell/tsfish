{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitReturns": false,
        "sourceMap": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/index.d.ts"
    ]
}